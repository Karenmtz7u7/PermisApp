<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivityRegisterUser" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:foregroundGravity="center">

            <ImageView
                android:id="@+id/privacy_pol"
                android:layout_width="192dp"
                android:layout_height="195dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/signup"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/iniciar_ses"
                android:layout_width="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Registro"
                android:textAppearance="@style/iniciar_ses"
                android:textColor="@color/verde1"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="Nombre(s)"
                    android:inputType="textPersonName"
                    android:lineHeight="18sp"
                    app:helperText="Obligatorio"
                    app:startIconDrawable="@drawable/ic_person_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usuarionametxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Apellidos"
                    android:inputType="textPersonName"
                    android:lineHeight="18sp"
                    app:helperText="Obligatorio"
                    app:startIconDrawable="@drawable/ic_person_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usuarioapellidotxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="RFC"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:lineHeight="18sp"
                    app:helperText="Obligatorio"
                    app:startIconDrawable="@drawable/ic_rfc">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/RFCtxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Telefono "
                        android:inputType="phone"
                        android:lineHeight="18sp"
                        app:startIconDrawable="@drawable/ic_outline_phone_24"
                        tools:ignore="MissingConstraints">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/telphonetxt"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:ems="10"
                            android:inputType="phone"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/poppins"
                        android:hint="No. de empleado"
                        android:inputType="number"
                        android:lineHeight="18sp"
                        app:helperText="Obligatorio"
                        app:startIconDrawable="@drawable/ic_outline_numbers_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/noemtxt"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    app:startIconDrawable="@drawable/ic_work"
                    android:gravity="center"
                    android:lineHeight="18sp"
                    app:helperText="Obligatorio">


                    <AutoCompleteTextView
                        android:id="@+id/Carreratxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="Área a la que pertenece"
                        android:background="@drawable/rectangle_7"
                        android:backgroundTint="@color/gris"
                        android:textSize="15sp"
                        android:inputType="none"
                        />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_email_"
                    android:fontFamily="@font/poppins"
                    android:hint="Correo electrónico"
                    app:helperText="Obligatorio"
                    android:inputType="textEmailAddress"
                    android:lineHeight="18sp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailusertxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        tools:layout_editor_absoluteX="15dp"
                        tools:layout_editor_absoluteY="417dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:helperText="Obligatorio"
                    app:startIconDrawable="@drawable/ic_lock_24"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="16dp"
                    android:hint="Contraseña"
                    android:lineHeight="18sp"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="507dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_lock_24"
                    app:helperText="Obligatorio"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="16dp"
                    android:hint="Confirmar contraseña"
                    android:lineHeight="18sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordverifytxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="507dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <Button
                android:id="@+id/signinbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/verde"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/poppins"
                android:lineHeight="38sp"
                android:text="Registrarse"
                android:textColor="@color/cafe"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="90dp"
                    android:layout_height="6dp"
                    android:background="@drawable/rectangle_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cafe"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="¿Ya tienes una cuenta?\nInicia sesión"/>
                <View
                    android:layout_width="90dp"
                    android:layout_height="6dp"
                    android:background="@drawable/rectangle_3"/>

            </LinearLayout>
            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/gris"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/poppins"
                android:lineHeight="38sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Iniciar sesión"
                android:textColor="@color/cafe"
                android:textStyle="bold"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
