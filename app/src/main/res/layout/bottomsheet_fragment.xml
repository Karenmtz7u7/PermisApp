<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_2"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/line_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins"
                android:text="Menú"
                android:textAppearance="@style/informaci_n"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/miperfilbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/icon"
                    android:layout_width="22dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_person_24" />

                <TextView
                    android:id="@+id/perfilbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Mi perfil"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/misnotificacionesbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_notifications_24" />

                <TextView
                    android:id="@+id/notificacionesbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Notificaciones"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mihistorialbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_history_24" />

                <TextView
                    android:id="@+id/historialsolibtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Historial de solicitudes"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/miestadobtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_check_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Estado de solicitudes"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Cuenta"
                android:textAppearance="@style/informaci_n"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/salirbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_output_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Cerrar sesión"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


