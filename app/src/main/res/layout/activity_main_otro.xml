<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity_Otro">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Formulario para la\nsolictud de incidencias"
                    android:textAlignment="center"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="El trabajador esta autorizado a:"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:focusable="false"
                    android:inputType="textEmailAddress">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otropermiso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/poppins"
                        android:text="Otro"
                        android:textAlignment="center"
                        android:textAppearance="@style/llegar_tard"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Especifique los motivos"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otroRazontxt"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="90"
                    android:lines="10"
                   android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:background="@drawable/rectangle_7"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pdfEvidenciatxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/rectangle_7"
                    android:clickable="false"
                    android:focusable="false"/>


                <Button
                    android:id="@+id/button3otro"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="60"
                    android:background="@drawable/rounded_button"
                    android:drawableLeft="@drawable/ic_pdf"
                    android:drawableTint="@color/grischido"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Adjuntar PDF"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/botonesperfil" />
            </LinearLayout>
            <TextView
                android:id="@+id/pdfEvidenciaUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:textSize="5dp"
                android:textColor="@color/nocolor"
                android:fontFamily="@font/poppins"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBarPDF"
                android:layout_width="360dp"
                android:layout_height="49dp"
                android:layout_marginTop="13dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:progress="5"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvProgress"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                tools:text="Cargando archivo 75%"
                android:layout_marginTop="13dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="25"
                    android:fontFamily="@font/poppins"
                    android:gravity="right"
                    android:text="Desde las:"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/hora_inicialotro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@drawable/rectangle_7"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_baseline_access_time_"
                    android:focusable="false"
                    android:fontFamily="@font/poppins"
                    android:text="Hora inicial"
                    android:textAlignment="center"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="25"
                    android:fontFamily="@font/poppins"
                    android:text="Horas"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="right"
                    android:text="Hasta las:"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/hora_finalotro"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_7"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_baseline_access_time_"
                    android:focusable="false"
                    android:fontFamily="@font/poppins"
                    android:text="Hora final"
                    android:textAlignment="center"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Horas"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="20"
                    android:fontFamily="@font/poppins"
                    android:gravity="left"
                    android:text="Del dÃ­a:"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fechaotro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_weight="70"
                    android:background="@drawable/rectangle_7"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_calendar"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/poppins"
                    android:text="Selecciona la fecha"
                    android:textAlignment="center"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/line_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Jefe Inmediato:"
                    android:textAppearance="@style/llegar_tard"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_7"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonEnviar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Enviar solicitud"
                        android:textAppearance="@style/llegar_tard"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/botonesperfil" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>